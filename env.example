# Security Configuration
VITE_SECURE_COOKIES=true
VITE_CSRF_PROTECTION=true
VITE_RATE_LIMITING=true
VITE_CONTENT_SECURITY_POLICY=true
VITE_XSS_PROTECTION=true
VITE_FRAME_OPTIONS=DENY

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
VITE_SESSION_TIMEOUT=1800000
VITE_REFRESH_TOKEN_TIMEOUT=604800000
VITE_PASSWORD_MIN_LENGTH=12

# Security Headers
VITE_SECURITY_HEADERS=true
VITE_STRICT_TRANSPORT_SECURITY=true
VITE_REFERRER_POLICY=strict-origin-when-cross-origin

# Rate Limiting
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Security
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png
VITE_SCAN_FILES_FOR_MALWARE=true

# Logging and Monitoring
VITE_ENABLE_SECURITY_LOGGING=true
VITE_LOG_LEVEL=info
VITE_ENABLE_AUDIT_TRAIL=true

# Development vs Production
VITE_NODE_ENV=development
VITE_DEBUG_MODE=false
VITE_ENABLE_DEV_TOOLS=false

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,fr,rw
VITE_FALLBACK_LOCALE=en

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# External Services (configure as needed)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=
